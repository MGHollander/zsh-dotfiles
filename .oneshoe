#!/usr/bin/env bash

SCRIPT_DIR=`dirname $0`

# One Shoe environment variable
export ONESHOE_ENV=development

# Aliases for default scripts in Drupal projects
alias oneshoe-build="bash scripts/build.sh"
alias osb="oneshoe-build"

alias oneshoe-clean-install="bash scripts/clean-install.sh"
alias osci="oneshoe-clean-install"

alias oneshoe-deploy="bash scripts/deploy.sh"
alias osd="oneshoe-deploy"

alias oneshoe-drush-update="bash scripts/drush-update.sh"
alias osdu="oneshoe-drush-update"

alias oneshoe-maintenance="bash scripts/maintenance.sh"
alias osm="oneshoe-maintenance"

# Aliases for my own scripts
alias oneshoe-create-project="bash $SCRIPT_DIR/oneshoe/create-project.sh"
alias oscp="oneshoe-create-project"

alias oneshoe-create-drupal-settings="bash $SCRIPT_DIR/oneshoe/create-drupal-settings-file.sh"
alias oscds="oneshoe-create-drupal-settings"

alias oneshoe-copy-drupal-local-settings="bash $SCRIPT_DIR/oneshoe/copy-drupal-local-settings-file.sh"
alias oscls="oneshoe-copy-drupal-local-settings"
