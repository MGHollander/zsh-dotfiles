#!/usr/bin/env bash

SCRIPT_DIR="$(dirname "$0")/.."

alias rush="bash $SCRIPT_DIR/scripts/mydrush.sh"

# Eport the database as file with the current date and time
alias dse='rush sql-dump --result-file="./sql-dump-$(date +'%Y%m%d%H%M%S').sql"'

# Import a database file
alias dsi='rush sql-cli <'

# Generate a one time login link without automatically opening the prowser
alias dul='rush uli'

# Import config, update db and rebuild cache
alias dup8='rush csim -y; rush updb -y; rush cr'

# Revert all features, update db and clear all caches
alias dup7='rush fra -y; rush updb -y; rush cc all'

# Empty Drupal 8 caches
alias dcr='rush cr'

# Empty Drupal 7 caches
alias dcc='rush cc all'
