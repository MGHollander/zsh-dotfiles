{
  /* VS Code setting for Drupal from drupal.org (https://www.drupal.org/docs/develop/development-tools/configuring-visual-studio-code) */
  "breadcrumbs.enabled": true,
  "css.validate": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.tabSize": 2,
  "editor.autoIndent": "full",
  "editor.insertSpaces": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": false,
  "editor.renderWhitespace": "boundary",
  "editor.wordWrapColumn": 80,
  "editor.wordWrap": "off",
  "editor.detectIndentation": true,
  "editor.rulers": [
    80, 120
  ],
  "files.associations": {
    "*.inc": "php",
    "*.module": "php",
    "*.install": "php",
    "*.theme": "php",
    "*.tpl.php": "php",
    "*.test": "php",
    "*.php": "php",
    "*.info": "ini",
    "*.html": "twig"
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "html.format.enable": true,
  "html.format.wrapLineLength": 80,
  "telemetry.enableTelemetry": false,

  /* Empty Indent */
  "emptyIndent.removeIndent": true,
  "emptyIndent.highlightIndent": false,
  "emptyIndent.highlightColor": "rgba(246,36,89,0.6)",

  /* PHP CodeSniffer (https://www.drupal.org/docs/develop/development-tools/configuring-visual-studio-code#s-drupal-code-standards-configuration) */
  "phpcs.enable": true,
  //"phpcs.standard": "/Users/marc.hollander/.composer/vendor/oneshoe/codingstandard/OneShoe",

  /* PHP Validate (https://www.drupal.org/docs/develop/development-tools/configuring-visual-studio-code#s-php-validation) */
  "php.validate.enable": true,
  "php.validate.executablePath": "/usr/local/bin/php",
  "php.validate.run": "onType",

  /* PHP IntelliSense/Intelephense (https://www.drupal.org/docs/develop/development-tools/configuring-visual-studio-code#s-php-intellisense) */
  "php.suggest.basic": false,
  // PHP IntelliSense only.
  "php.executablePath": "/usr/local/bin/php",
  // PHP Intelephense and Drupal >8 only. This should be set to the path to core/index.php.
  "intelephense.environment.documentRoot": "core/index.php",

  /* PHP Docblocks (https://www.drupal.org/docs/develop/development-tools/configuring-visual-studio-code#s-php-docblocks) */
  "php-docblocker.gap": true,
  "php-docblocker.useShortNames": true,

  /* Composer (https://www.drupal.org/docs/develop/development-tools/configuring-visual-studio-code#s-composer-drupal-8) */
  "composer.enabled": true,
  "composer.executablePath": "/usr/local/bin/composer",

  /* Twig support (https://www.drupal.org/docs/develop/development-tools/configuring-visual-studio-code#s-twig-language-drupal-8) */
  "emmet.includeLanguages": {
    "twig": "html"
  }
}
