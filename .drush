#!/usr/bin/env bash

SCRIPT_DIR=`dirname $0`

alias mydrush="bash $SCRIPT_DIR/oneshoe/mydrush.sh"

# Eport the database as file with the current date and time
alias dse='mydrush sql-dump --result-file="./sql-dump-$(date +'%Y%m%d%H%M%S').sql"'

# Import a database file
alias dsi='mydrush sql-cli <'

# Generate a one time login link without automatically opening the prowser
alias dul='mydrush uli'

# Import config, update db and rebuild cache
alias dup='mydrush csim -y; mydrush updb -y; mydrush cr'
