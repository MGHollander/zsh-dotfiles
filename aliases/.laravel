#!/usr/bin/env bash

# Laravel shortcuts (php artisan)
alias pa='php artisan'
alias pat='pa tinker'

# Laravel Sail
alias sail='[ -f sail ] && sh sail || sh vendor/bin/sail'
alias saa='sail artisan'
alias saam='saa migrate'
alias sau='sail up -d'
alias sd="sail down"
alias sst="sail stop"
alias sat='saa tinker'
alias sc="sail composer"
alias sr="sc require"

alias start="sau && sail npm run dev"
